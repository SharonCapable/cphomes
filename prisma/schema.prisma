// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  PROPERTY_MANAGER
  SUPER_ADMIN
}

enum PropertyType {
  APARTMENT
  HOUSE
  CONDO
  VILLA
  STUDIO
}

enum Currency {
  USD
  GHS
}

enum BillingPeriod {
  PER_NIGHT
  PER_MONTH
}

enum PropertyStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
  PENDING
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  fullName      String
  passwordHash  String?
  role          UserRole  @default(USER)
  phone         String?
  avatarUrl     String?
  
  // Relations
  properties    Property[]
  applications  PropertyManagerApplication[]
  favorites     Favorite[]
  bookings      Booking[]
  reviews       Review[]
  activityLogs  ActivityLog[]
  sentMessages      Message[] @relation("SentMessages")
  receivedMessages  Message[] @relation("ReceivedMessages")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Property {
  id              String         @id @default(cuid())
  manager         User           @relation(fields: [managerId], references: [id])
  managerId       String
  
  title           String
  description     String         @db.Text
  type            PropertyType
  status          PropertyStatus @default(AVAILABLE)
  
  // Location
  address         String
  city            String
  state           String?
  country         String
  zipCode         String?
  latitude        Float?
  longitude       Float?
  
  // Details
  bedrooms        Int
  bathrooms       Int
  squareFeet      Int?
  furnished       Boolean        @default(false)
  petsAllowed     Boolean        @default(false)
  parking         Boolean        @default(false)
  
  // Pricing
  pricePerMonth   Decimal        @db.Decimal(10, 2)
  currency        Currency       @default(USD)
  billingPeriod   BillingPeriod  @default(PER_MONTH)
  securityDeposit Decimal?       @db.Decimal(10, 2)
  
  // Amenities & Collections
  amenities       String[]       // Array of amenities
  isFeatured      Boolean        @default(false)
  views           Int            @default(0)
  slug            String         @unique
  
  // Relations
  images          PropertyImage[]
  favorites       Favorite[]
  bookings        Booking[]
  reviews         Review[]
  messages        Message[]
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([status])
  @@index([city])
  @@index([pricePerMonth])
}

model PropertyImage {
  id          String   @id @default(cuid())
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId  String
  url         String
  caption     String?
  displayOrder Int     @default(0)
  isPrimary   Boolean  @default(false)
  
  createdAt   DateTime @default(now())
}

model PropertyManagerApplication {
  id              String            @id @default(cuid())
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  
  companyName     String?
  businessType    String?           // Optional
  phone           String
  
  address         String?           // Optional
  city            String?           // Optional
  state           String?
  country         String?           // Optional
  zipCode         String?
  
  yearsExperience String?
  propertyCount   String?
  description     String?           @db.Text
  website         String?
  
  documents       String[]          // Array of file URLs
  
  status          ApplicationStatus @default(PENDING)
  rejectionReason String?
  
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([status])
  @@index([userId])
}

model Favorite {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId  String
  
  createdAt   DateTime @default(now())

  @@unique([userId, propertyId])
}

model Booking {
  id              String        @id @default(cuid())
  property        Property      @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId      String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  
  checkIn         DateTime
  checkOut        DateTime
  guests          Int
  totalPrice      Decimal       @db.Decimal(10, 2)
  
  message         String?       @db.Text
  phone           String?
  
  status          BookingStatus @default(PENDING)
  managerResponse String?       @db.Text
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Review {
  id          String   @id @default(cuid())
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId  String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  
  rating      Int
  comment     String?  @db.Text
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ActivityLog {
  id          String   @id @default(cuid())
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId      String?
  
  action      String
  entityType  String?
  entityId    String?
  details     String?  @db.Text
  ipAddress   String?
  userAgent   String?
  
  createdAt   DateTime @default(now())
}

model Message {
  id          String   @id @default(cuid())
  content     String   @db.Text
  
  // Relations
  sender      User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  senderId    String
  
  receiver    User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId  String
  
  property    Property? @relation(fields: [propertyId], references: [id], onDelete: SetNull)
  propertyId  String?
  
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  status    String   @default("UNREAD") // UNREAD, READ, ARCHIVED
  createdAt DateTime @default(now())
}
